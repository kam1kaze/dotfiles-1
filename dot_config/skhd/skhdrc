# open apps
cmd - return    : open -n -a alacritty
cmd + shift - f : open-app finder
cmd + shift - t : open -nga firefox
# cmd + shift - 0x2A : killall KeyCastr || open -a KeyCastr --background

# screenshots
alt + shift - 0  : scr
ctrl + shift - 0 : scr -s

# cycle through windows
alt - tab : yabai -m window --focus next || yabai -m window --focus "$((yabai -m query --spaces --display next || yabai -m query --spaces --display first) | jq -re '.[] | select(.visible == 1)."first-window"')"
shift + alt - tab : yabai -m window --focus prev || yabai -m window --focus "$((yabai -m query --spaces --display prev || yabai -m query --spaces --display last) | jq -re '.[] | select(.visible == 1)."last-window"')"

# yabai
cmd + shift - r : launchctl kickstart -k "gui/${UID}/homebrew.mxcl.yabai"
cmd + shift - q : launchctl unload /usr/local/opt/yabai/homebrew.mxcl.yabai.plist
cmd + shift - y : launchctl load /usr/local/opt/yabai/homebrew.mxcl.yabai.plist

# gap and padding toggles
cmd + shift - b    : togglebar
cmd - 0x29         : yabai -m space --padding rel:-5:-5:-5:-5
cmd - 0x27         : yabai -m space --padding rel:5:5:5:5
cmd + shift - 0x29 : yabai -m space --gap rel:-5
cmd + shift - 0x27 : yabai -m space --gap rel:5
cmd + shift - g    : togglegaps

# layout toggles
ctrl - space        : yabai -m window --toggle float && yabai -m window --grid 4:4:1:1:2:2 && /tmp/yabai-restore/$(yabai -m query --windows --window | jq -re '.id').restore 2>/dev/null || true
ctrl - s            : yabai -m window --toggle sticky
ctrl - o            : yabai -m window --toggle topmost
cmd + shift - space : yabai -m space --layout $(yabai -m query --spaces --space | jq -r 'if .type == "bsp" then "float" else "bsp" end')

# focus node
cmd - h : yabai -m window --focus west
cmd - j : yabai -m window --focus south
cmd - k : yabai -m window --focus north
cmd - l : yabai -m window --focus east

# swap node
# cmd + shift - h : yabai -m window --swap west
# cmd + shift - j : yabai -m window --swap south
# cmd + shift - k : yabai -m window --swap north
# cmd + shift - l : yabai -m window --swap east

# focus space
cmd - 1 : yabai -m space --focus 1 || { yabai -m space --create ; yabai -m space --focus last; }
cmd - 2 : yabai -m space --focus 2 || { yabai -m space --create ; yabai -m space --focus last; }
cmd - 3 : yabai -m space --focus 3 || { yabai -m space --create ; yabai -m space --focus last; }
cmd - 4 : yabai -m space --focus 4 || { yabai -m space --create ; yabai -m space --focus last; }
cmd - 5 : yabai -m space --focus 5 || { yabai -m space --create ; yabai -m space --focus last; }
cmd - 6 : yabai -m space --focus 6 || { yabai -m space --create ; yabai -m space --focus last; }
cmd - 7 : yabai -m space --focus 7 || { yabai -m space --create ; yabai -m space --focus last; }
cmd - 8 : yabai -m space --focus 8 || { yabai -m space --create ; yabai -m space --focus last; }
cmd - 9 : yabai -m space --focus 9 || { yabai -m space --create ; yabai -m space --focus last; }
cmd - 0 : yabai -m space --focus 10 || { yabai -m space --create ; yabai -m space --focus last; }

# warp node
cmd + shift - h : yabai -m window --warp west
cmd + shift - j : yabai -m window --warp south
cmd + shift - k : yabai -m window --warp north
cmd + shift - l : yabai -m window --warp east

# warp node to space
cmd + shift - 1 : yabai -m window --space 1 || { yabai -m space --create ; yabai -m window --space last; }
cmd + shift - 2 : yabai -m window --space 2 || { yabai -m space --create ; yabai -m window --space last; }
cmd + shift - 3 : yabai -m window --space 3 || { yabai -m space --create ; yabai -m window --space last; }
cmd + shift - 4 : yabai -m window --space 4 || { yabai -m space --create ; yabai -m window --space last; }
cmd + shift - 5 : yabai -m window --space 5 || { yabai -m space --create ; yabai -m window --space last; }
cmd + shift - 6 : yabai -m window --space 6 || { yabai -m space --create ; yabai -m window --space last; }
cmd + shift - 7 : yabai -m window --space 7 || { yabai -m space --create ; yabai -m window --space last; }
cmd + shift - 8 : yabai -m window --space 8 || { yabai -m space --create ; yabai -m window --space last; }
cmd + shift - 9 : yabai -m window --space 9 || { yabai -m space --create ; yabai -m window --space last; }
cmd + shift - 0 : yabai -m window --space 10 || { yabai -m space --create ; yabai -m window --space last; }

# create space and focus
cmd + shift - n : yabai -m space --create && \
                  index="$(yabai -m query --spaces --display | jq 'map(select(."native-fullscreen" == 0))[-1].index')" && \
                  yabai -m space --focus "${index}"

# move floating window
cmd + shift - left  : yabai -m window --move rel:-20:0
cmd + shift - down  : yabai -m window --move rel:0:20
cmd + shift - up    : yabai -m window --move rel:0:-20
cmd + shift - right : yabai -m window --move rel:20:0

# resize
alt + shift - w : yabai -m window south --resize top:0:-20 2> /dev/null || yabai -m window --resize top:0:-20
alt + shift - a : yabai -m window west --resize right:-20:0 2> /dev/null || yabai -m window --resize right:-20:0
alt + shift - s : yabai -m window north --resize bottom:0:20 2> /dev/null || yabai -m window --resize bottom:0:20
alt + shift - d : yabai -m window east --resize left:20:0 2> /dev/null || yabai -m window --resize left:20:0

# set insertion point in focused container
cmd + ctrl - h : yabai -m window --insert west
cmd + ctrl - j : yabai -m window --insert south
cmd + ctrl - k : yabai -m window --insert north
cmd + ctrl - l : yabai -m window --insert east

# toggle window fullscreen zoom
ctrl - f : yabai -m window --toggle zoom-fullscreen

# toggle window split type
ctrl - e : yabai -m window --toggle split

# swap current and biggest node
cmd - g : \
    largest_id=$(yabai -m query --windows --window largest | jq -r '.id');\
    current_id=$(yabai -m query --windows --window | jq -r '.id');\
    if [ "$largest_id" != "$current_id" ]; then;\
      echo "$largest_id" > "${TMPDIR}/yabai_last_window_swapped_wid";\
      yabai -m window --swap largest;\
    elif test -f "${TMPDIR}/yabai_last_window_swapped_wid"; then;\
      yabai -m window --swap $(cat "${TMPDIR}/yabai_last_window_swapped_wid");\
    fi;

# passthrough mode
:: passthrough
ctrl - p ; passthrough
passthrough < ctrl - p ; default
