# open apps
cmd - return    : open -n -a alacritty
cmd + shift - f : open-app finder
cmd + shift - t : open -n -g -a firefox
# cmd + shift - 0x2A : killall KeyCastr || open -a KeyCastr

# screenshots
alt + shift - 0  : scr
ctrl + shift - 0 : scr -s

# cycle forwards
alt - tab : yabai -m query --spaces \
  | jq -re ".[] | select(.visible == 1).index" \
  | xargs -I{} yabai -m query --windows --space {} \
  | jq -sre "add | sort_by(.display, .frame.x, .frame.y, .id) | reverse | nth(index(map(select(.focused == 1))) - 1).id" \
  | xargs -I{} yabai -m window --focus {}

# cycle backwards
shift +  alt - tab : yabai -m query --spaces \
  | jq -re ".[] | select(.visible == 1).index" \
  | xargs -I{} yabai -m query --windows --space {} \
  | jq -sre "add | sort_by(.display, .frame.x, .frame.y, .id) | nth(index(map(select(.focused == 1))) - 1).id" \
  | xargs -I{} yabai -m window --focus {}

# toggles
cmd + shift - r      : launchctl kickstart -k "gui/${UID}/homebrew.mxcl.yabai"
cmd + shift - b      : togglebar

cmd - 0x1E           : yabai -m space --padding rel:-5:-5:-5:-5
cmd - 0x21           : yabai -m space --padding rel:5:5:5:5
cmd + shift - 0x21   : yabai -m space --gap rel:-5
cmd + shift - 0x1E   : yabai -m space --gap rel:5
cmd - g              : togglegaps

alt - space          : yabai -m window --toggle float && /tmp/yabai-restore/$(yabai -m query --windows --window | jq -re '.id').restore 2>/dev/null || true
alt - s              : yabai -m window --toggle sticky
alt - o              : yabai -m window --toggle topmost

cmd + shift - space  : yabai -m space --layout $(yabai -m query --spaces --space | jq -r 'if .type == "bsp" then "float" else "bsp" end')

# focus
cmd - h : yabai -m window --focus west
cmd - j : yabai -m window --focus south
cmd - k : yabai -m window --focus north
cmd - l : yabai -m window --focus east

cmd - 1 : yabai -m space --focus 1
cmd - 2 : yabai -m space --focus 2
cmd - 3 : yabai -m space --focus 3
cmd - 4 : yabai -m space --focus 4
cmd - 5 : yabai -m space --focus 5
cmd - 6 : yabai -m space --focus 6
cmd - 7 : yabai -m space --focus 7
cmd - 8 : yabai -m space --focus 8
cmd - 9 : yabai -m space --focus 9
cmd - 0 : yabai -m space --focus 10

# cmd - left  : yabai -m space --focus prev || yabai -m space --focus last
# cmd - right : yabai -m space --focus next || yabai -m space --focus first

# resize
alt + shift - w : yabai -m window south --resize top:0:-20 2> /dev/null || yabai -m window --resize top:0:-20
alt + shift - a : yabai -m window west --resize right:-20:0 2> /dev/null || yabai -m window --resize right:-20:0
alt + shift - s : yabai -m window north --resize bottom:0:20 2> /dev/null || yabai -m window --resize bottom:0:20
alt + shift - d : yabai -m window east --resize left:20:0 2> /dev/null || yabai -m window --resize left:20:0

# warp
cmd + shift - h : yabai -m window --warp west
cmd + shift - j : yabai -m window --warp south
cmd + shift - k : yabai -m window --warp north
cmd + shift - l : yabai -m window --warp east

cmd + shift - 1 : yabai -m window --space 1
cmd + shift - 2 : yabai -m window --space 2
cmd + shift - 3 : yabai -m window --space 3
cmd + shift - 4 : yabai -m window --space 4
cmd + shift - 5 : yabai -m window --space 5
cmd + shift - 6 : yabai -m window --space 6
cmd + shift - 7 : yabai -m window --space 7
cmd + shift - 8 : yabai -m window --space 8
cmd + shift - 9 : yabai -m window --space 9
cmd + shift - 0 : yabai -m window --space 10

# swap
cmd + ctrl - h : yabai -m window --swap west
cmd + ctrl - j : yabai -m window --swap south
cmd + ctrl - k : yabai -m window --swap north
cmd + ctrl - l : yabai -m window --swap east

# set insertion point in focused container
cmd + shift - w : yabaiborder ; yabai -m window --insert north
cmd + shift - a : yabaiborder ; yabai -m window --insert west
cmd + shift - s : yabaiborder ; yabai -m window --insert south
cmd + shift - d : yabaiborder ; yabai -m window --insert east

# toggle window fullscreen zoom
ctrl - f : yabai -m window --toggle zoom-fullscreen

# toggle window split type
ctrl - e : yabai -m window --toggle split

# swap current and biggest node
cmd - d : \
    largest_id=$(yabai -m query --windows --window largest | jq -r '.id');\
    current_id=$(yabai -m query --windows --window | jq -r '.id');\
    if [ "$largest_id" != "$current_id" ]; then;\
      echo "$largest_id" > "${TMPDIR}/yabai_last_window_swapped_wid";\
      yabai -m window --swap largest;\
    elif test -f "${TMPDIR}/yabai_last_window_swapped_wid"; then;\
      yabai -m window --swap $(cat "${TMPDIR}/yabai_last_window_swapped_wid");\
    fi;

# passthrough mode
:: passthrough
ctrl - p ; passthrough
passthrough < ctrl - p ; default
